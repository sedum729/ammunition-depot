{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "core": ["./src/core"],
      "core/*": ["./src/core/*"],
      "log": ["./src/log"],
      "utils": ["./src/utils"],
      "runtime": ["./src/runtime"],
      "router": ["./src/router"],
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "example",
    "**/rollup.config.js",
    "**/*.spec.ts",
    "examples",
    "**/lib",
    "**/scripts"
  ]
}
